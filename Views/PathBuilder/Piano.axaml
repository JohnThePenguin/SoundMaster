<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SoundMasterGui.Views.PathBuilder.Piano">
    <UserControl.Styles>
        <Style Selector="Button.tile">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Height" Value="26"></Setter>
            <Setter Property="Width" Value="70"/>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="HorizontalAlignment" Value="Left"></Setter>
        </Style>
        <Style Selector="Button.tile.tone"> 
            <Setter Property="Background" Value="WhiteSmoke"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
        <Style Selector="Button.tile.semitone"> 
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="WhiteSmoke"/>
        </Style>
    </UserControl.Styles>
    <StackPanel Name="PianoPanel" HorizontalAlignment="Left" Orientation="Vertical" Width="70">
    </StackPanel>
</UserControl>
